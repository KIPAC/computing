#%Module1.0#####################################################################
##
## modules hdf5
##
## modulefiles/hdf5
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "hdf5 - setup hdf5"
}

module-whatis   "Sets the environment for using hdf5"

# for Tcl script use only
set     hdf5ver      1.15
set     basedir     /afs/slac.stanford.edu/g/ki/software/hdf5/${hdf5ver}/@sys

conflict hdf5

setenv       SLAC_HDF5_DIR    $basedir
setenv       SLAC_HDF5_INC    $basedir/include
setenv       SLAC_HDF5_LIB    $basedir/lib
prepend-path PATH             $basedir/bin
append-path  LD_LIBRARY_PATH  $basedir/lib
append-path  LIBRARY_PATH     $basedir/lib
append-path  C_INCLUDE_PATH   $basedir/include
